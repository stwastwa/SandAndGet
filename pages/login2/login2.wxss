  width: 130rpx;
  height: 130rpx;
  margin-left: 50rpx;
  /*border:5rpx solid #fff;*/
  border-radius: 50%;
}
/*用户名*/
.user-info-box .username{
  font-size: 40rpx;
  color: #fff;
  margin-left: 40rpx;
  position:relative;
}
