page {
  background-color:  #f3f2f2;
}
.head {
  width: 100%;
  height: 550rpx;
  overflow: hidden;
  position: fixed;
  position: relative;
}
.head::after {
  content: '';
  width: 140%;
  height: 550rpx;
  position: absolute;
  z-index: -1;
  left: -20%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: #cf4037;
}
.user-info-box{
  margin-top: 220rpx;
  height: 180rpx;
  display:flex;
  align-items:center;
  position:relative;
  z-index: 1;
}
